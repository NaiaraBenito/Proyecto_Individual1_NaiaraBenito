    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rosa</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rosa</item>
        <item name="colorSecondaryVariant">@color/rosa</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorButtonNormal">@color/rosa</item>
        <item name="colorAccent">@color/rosa</item>

        <item name="android:statusBarColor">@color/rosa</item>

        <!-- Enlazar el Launch Screen con el Login con una transiciÃ³n -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:gravity">center</item>

